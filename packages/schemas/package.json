{
  "name": "@recursica/schemas",
  "description": "Recursica design system schemas and types",
  "version": "1.0.6",
  "private": false,
  "homepage": "https://github.com/borderux/recursica#readme",
  "bugs": {
    "url": "https://github.com/borderux/recursica/issues"
  },
  "author": "hi@borderux.com",
  "packageManager": "npm@10.9.0",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borderux/recursica.git"
  },
  "keywords": [
    "Design System",
    "Design",
    "System",
    "Recursica",
    "schemas",
    "UX",
    "UI"
  ],
  "types": "./dist/types/index.d.ts",
  "exports": {
    "./types": "./dist/types/index.d.ts",
    "./types/*": "./dist/types/*.ts",
    "./json/*": "./dist/*.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "generate-types": "npm test && node scripts/generate-types.js",
    "test": "node scripts/validate-schemas.js && npm run check-types"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "ajv": "^8.12.0",
    "eslint": "^9.28.0",
    "fast-uri": "^3.0.6",
    "glob": "^10.3.10",
    "json-schema-to-typescript": "^15.0.0",
    "typescript": "5.8.2"
  }
}
