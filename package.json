{
  "name": "@recursica/recursica",
  "description": "Recursica design system monorepo",
  "version": "1.0.0",
  "private": false,
  "homepage": "https://github.com/borderux/recursica#readme",
  "bugs": {
    "url": "https://github.com/borderux/recursica/issues"
  },
  "author": "hi@borderux.com",
  "scripts": {
    "build": "node -e \"console.log('ðŸ” DEBUG: Root build env vars:'); console.log('  VITE_RECURSICA_API_URL:', process.env.VITE_RECURSICA_API_URL); console.log('  VITE_PLUGIN_PHRASE:', process.env.VITE_PLUGIN_PHRASE ? process.env.VITE_PLUGIN_PHRASE.substring(0,4) + '...' : 'undefined'); console.log('  RECURSICA_API_TEST:', process.env.RECURSICA_API_TEST); console.log('  PLUGIN_PHRASE_TEST:', process.env.PLUGIN_PHRASE_TEST);\" && turbo run build --env-mode=loose",
    "dev": "turbo run dev",
    "recursica": "recursica",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss}\"",
    "check-types": "turbo run check-types",
    "prepare": "node .husky/install.mjs",
    "precommit": "npm run check-types && npm run lint && npm run test && npm run format",
    "test": "turbo run test",
    "version": "changeset version",
    "release": "changeset publish --access public",
    "publish": "node scripts/publish.mjs",
    "pr": "node scripts/create-pr.js",
    "pr:commit": "node scripts/commit-pr-check.js",
    "simulate-ci": "./scripts/simulate-ci-build.sh",
    "storybook": "turbo run storybook --filter=recursica-storybook"
  },
  "packageManager": "npm@10.9.0",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borderux/recursica.git"
  },
  "keywords": [
    "Design",
    "System",
    "UX",
    "UI"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@recursica/mantine-adapter": "*",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "prettier": "3.5.3"
  },
  "dependencies": {
    "turbo": "^2.5.4",
    "typescript": "5.8.2"
  },
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx,md,css,scss}": "npm run precommit"
  }
}
