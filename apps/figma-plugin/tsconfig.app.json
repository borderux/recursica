{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "baseUrl": "./",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": ["../../node_modules/@types", "../../node_modules"],
    "types": ["react", "node", "@figma/plugin-typings", "@recursica/schemas"]
  },
  "include": [
    "src",
    "../../packages/ui-kit/src/components/Logo",
    "../../packages/recursica-common/src/rgbToHex.ts",
    "../../packages/recursica-common/src/toFontWeight.ts"
  ]
}
