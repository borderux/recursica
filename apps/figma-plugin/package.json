{
  "name": "@recursica/figma-plugin",
  "private": true,
  "version": "0.0.11",
  "description": "The Figma plugin for Recursica",
  "type": "module",
  "license": "MIT",
  "author": "hi@borderux.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/borderux/recursica.git"
  },
  "keywords": [
    "figma",
    "plugin",
    "recursica",
    "design"
  ],
  "bugs": {
    "url": "https://github.com/borderux/recursica/issues"
  },
  "homepage": "https://github.com/borderux/recursica",
  "scripts": {
    "dev": "concurrently \"npm run dev:ui\" \"npm run dev:code\"",
    "dev:ui": "vite build --watch --mode development",
    "dev:code": "vite build --watch --config vite.config.lib.ts --mode development",
    "build": "npm run build:ui && npm run build:code && cp manifest.production.json dist/manifest.json",
    "build:test": "tsc -b && vite build --mode test && vite build --config vite.config.lib.ts --mode test && cp manifest.test.json dist-test/manifest.json",
    "build:ui": "tsc -b && vite build --mode production",
    "build:code": "tsc -b && vite build --config vite.config.lib.ts --mode production",
    "lint": "eslint ./src",
    "zip:test": "npm run build:test && cp manifest.json manifest.test.json && cp ../figma-plugin-test/manifest.test.json manifest.json && node scripts/zip.mjs && cp manifest.test.json manifest.json",
    "zip:production": "npm run build && cp manifest.json manifest.test.json && cp manifest.production.json manifest.json && node scripts/zip.mjs && cp manifest.test.json manifest.json",
    "preview": "vite preview",
    "check-types": "tsc --noEmit",
    "format": "prettier --write .",
    "prepublishOnly": "npx turbo run build --filter=@recursica/figma-plugin"
  },
  "dependencies": {
    "@figma/plugin-typings": "1.113.0",
    "@mantine/core": "^8.2.2",
    "@mantine/hooks": "^8.2.2",
    "@recursica/common": "*",
    "@recursica/ui-kit-mantine": "*",
    "axios": "1.9.0",
    "crypto-js": "^4.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-router": "7.6.1"
  },
  "devDependencies": {
    "@eslint/js": "9.11.1",
    "@recursica/schemas": "*",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/archiver": "6.0.3",
    "@types/node": "24.0.0",
    "@types/react": "19.1.7",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitejs/plugin-react-swc": "3.10.2",
    "archiver": "7.0.1",
    "concurrently": "9.0.1",
    "eslint": "9.11.1",
    "eslint-config-prettier": "10.1.5",
    "eslint-plugin-react": "7.37.1",
    "eslint-plugin-react-hooks": "5.1.0-rc.0",
    "eslint-plugin-react-refresh": "0.4.9",
    "globals": "16.2.0",
    "javascript-stringify": "2.1.0",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "require-like": "0.1.2",
    "tslib": "2.8.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.8.0",
    "vite": "6.3.5",
    "vite-plugin-singlefile": "2.2.0"
  }
}
